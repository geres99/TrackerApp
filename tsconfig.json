{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES6",
    "paths": {
      "assets/*": [
        "./assets/*"
      ],
      "components/*": [
        "./components/*"
      ],
      "contexts/*": [
        "./contexts/*"
      ],
      "hooks/*": [
        "./hooks/*"
      ],
      "screens/*": [
        "./screens/*"
      ],
      "setup/*": [
        "theme/*"
      ],
      "theme/*": [
        "./theme/*"
      ],
      "utils/*": [
        "./utils/*"
      ],
      "api/*": [
        "./api/*"
      ],
      "__mocks__/*": [
        "./__mocks__/*"
      ]
    }
  },
  "include": [
    "./api/**/*",
    "./**/*",
    "./assets/**/*",
    "./components/**/*",
    "./contexts/**/*",
    "./hooks/**/*",
    "./screens/**/*",
    "theme/**/*",
    "./theme/**/*",
    "./utils/**/*",
    "./@types/*",
    "./__mocks__/*",
    "theme/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "extends": "expo/tsconfig.base"
}
